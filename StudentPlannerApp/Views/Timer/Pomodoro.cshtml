@{
    ViewBag.Title = "Pomodoro Scheduler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pomodoro Scheduler</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

@using (Html.BeginForm("SetPomodoroSchedule", "Timer", FormMethod.Post))
{
    <div class="form-group">
        <label for="startTime">Start Time</label>
        <input type="datetime-local" class="form-control" id="startTime" name="startTime" required />
    </div>

    <div class="form-group mt-2">
        <label for="pomodoroDuration">Pomodoro Duration (minutes)</label>
        <input type="number" class="form-control" id="pomodoroDuration" name="pomodoroDuration" value="25" required />
    </div>

    <div class="form-group mt-2">
        <label for="breakDuration">Break Duration (minutes)</label>
        <input type="number" class="form-control" id="breakDuration" name="breakDuration" value="5" required />
    </div>

    <div class="form-group mt-2">
        <label for="activity">Activity Description</label>
        <input type="text" class="form-control" id="activity" name="activity" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create Task </button>
}

<hr />


