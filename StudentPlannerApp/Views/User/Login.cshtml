@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100" >
    <div class="text-center" style="max-width: 350px; width: 100%;">


        <!-- Title -->
        <h2 class="fw-bold text-success">Gradle</h2>

        <!-- Logo -->
        <img src="~/Content/Images/logo.png" alt="Logo" class="img-fluid mb-3" style="max-width: 120px;">


        <p class="mb-4">Sign in</p>

        <!-- Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <!-- Login Form -->
        <form method="post" action="/User/Login">
            @Html.AntiForgeryToken()

            <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0">
                    <span class="material-icons">person</span>
                </span>
                <input type="text" class="form-control border-start-0" name="Email" placeholder="Email" required />
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0">
                    <span class="material-icons">lock</span>
                </span>
                <input type="password" class="form-control border-start-0" name="Password" placeholder="Password" required />
            </div>

            <button type="submit" class="btn btn-success w-100 mb-3">Sign in</button>
        </form>

        <div class="d-flex align-items-center my-3">
            <hr class="flex-grow-1">
            <span class="mx-2 text-muted">or sign in with</span>
            <hr class="flex-grow-1">
        </div>

        <!-- Social Icons -->
        <div class="d-flex justify-content-center gap-3 mb-3">
            <a href="#" class="text-dark fs-4"><i class="bi bi-facebook"></i></a>
            <a href="#" class="text-dark fs-4"><i class="bi bi-twitter-x"></i></a>
            <a href="#" class="text-dark fs-4"><i class="bi bi-google"></i></a>
        </div>

        <!-- Sign up link -->
        <p class="text-muted small">Don’t have an account? <a href="/User/Register" class="text-success">Sign up</a></p>
    </div>
</div>
